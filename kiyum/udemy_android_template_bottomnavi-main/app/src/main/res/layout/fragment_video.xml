<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video_fragment_clip1_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_video_exp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/video_fragment_title1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[MV] 쉬운 답"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_fragment_clip1_iv"
                app:layout_constraintStart_toStartOf="@id/video_fragment_clip1_iv"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/video_fragment_artist1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="데이브레이크(DAYBREAK) &amp; LUCY | 2022.03.31"
                android:textSize="14sp"
                android:textColor="@color/gray_color"
                app:layout_constraintTop_toBottomOf="@id/video_fragment_title1_tv"
                app:layout_constraintStart_toStartOf="@id/video_fragment_title1_tv"
                android:layout_marginStart="20dp"
                />

            <ImageView
                android:id="@+id/video_fragment_clip2_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_video_exp"

                app:layout_constraintTop_toTopOf="@id/video_fragment_artist1_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/video_fragment_title2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[티저] 쉬운 답"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_fragment_clip2_iv"
                app:layout_constraintStart_toStartOf="@id/video_fragment_title1_tv"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/video_fragment_artist2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="데이브레이크(DAYBREAK) &amp; LUCY | 2022.03.31"
                android:textSize="14sp"
                android:textColor="@color/gray_color"
                app:layout_constraintTop_toBottomOf="@id/video_fragment_title2_tv"
                app:layout_constraintStart_toStartOf="@id/video_fragment_title1_tv"
                android:layout_marginStart="20dp"
                />
    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>