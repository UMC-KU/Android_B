<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_pannel_background_iv"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@drawable/img_first_album_default"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/home_pannel_mike_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_mike"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_ticket_iv"/>

    <ImageView
        android:id="@+id/home_pannel_ticket_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_ticket"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_setting_iv"/>

    <ImageView
        android:id="@+id/home_pannel_setting_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_setting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/home_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="밤 하늘과 센티한 알앤비 음 \n악 "
        android:textSize="28dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_pannel_ticket_iv"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/home_pannel_play_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintStart_toEndOf="@id/home_text_tv"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_ticket_iv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/home_pannel_song"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintTop_toBottomOf="@id/home_text_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="160dp"/>

    <TextView
        android:id="@+id/home_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butter"
        app:layout_constraintStart_toEndOf="@id/home_pannel_song"
        app:layout_constraintTop_toBottomOf="@id/home_text_tv"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/home_songmaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adam(남보우)"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/home_songname"
        app:layout_constraintStart_toEndOf="@id/home_pannel_song"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/home_pannel_song2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_potcast_exp"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_song"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/home_song2name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Song"
        app:layout_constraintStart_toEndOf="@id/home_pannel_song2"
        app:layout_constraintTop_toBottomOf="@id/home_songmaker"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/home_songmaker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="귀책사유(김시선)"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/home_song2name"
        app:layout_constraintStart_toEndOf="@id/home_pannel_song"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/home_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 66곡 2022.03.17"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_song"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/home_todayopenedsong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 발매 음악"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"/>

    <ImageView
        android:id="@+id/home_mainarrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintStart_toEndOf="@id/home_todayopenedsong"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/home_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종합"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
        app:layout_constraintStart_toEndOf="@id/home_mainarrow"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"/>

    <TextView
        android:id="@+id/home_korea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국내"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
        app:layout_constraintStart_toEndOf="@id/home_total"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/home_foreign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해외"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
        app:layout_constraintStart_toEndOf="@id/home_korea"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"/>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_todayopenedsong">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_thirty_iv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/thrity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_todayopenedsong" />

                <TextView
                    android:id="@+id/home_thirtytext_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="서른, 아홉 OST Part.5"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/home_thirtymaker_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="휘인(Whee In)"
                    android:textSize="12dp"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_afterwinter_iv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/afterwinter"/>

                <TextView
                    android:id="@+id/home_afterwintertext_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="겨울 지나 벚꽃 OST PART.4"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/home_afterwintermaker_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="혜린(EXID)"
                    android:textSize="12dp"
                    android:layout_marginStart="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_insomnia_iv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/insomnia"/>

                <TextView
                    android:id="@+id/home_insomniatext_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="INSOMNIA"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/home_insomniamaker_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="윤비(YunB) &amp; sokodo..."
                    android:textSize="12dp"
                    android:layout_marginStart="20dp"/>


            </LinearLayout>



       </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>