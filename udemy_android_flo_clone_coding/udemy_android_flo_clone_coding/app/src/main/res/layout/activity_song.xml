<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ImageView
      android:id="@+id/song_setting_iv"
       android:layout_width="30dp"
       android:layout_height="30dp"
      android:src="@drawable/btn_player_setting"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="60dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="15dp"/>

   <ImageView
      android:id="@+id/song_eq_iv"
       android:layout_width="30dp"
       android:layout_height="30dp"
      android:src="@drawable/btn_player_eq_off"
      app:layout_constraintStart_toEndOf="@id/song_setting_iv"
      android:layout_marginStart="15dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="60dp"/>

   <ImageView
      android:id="@+id/song_downarrow_iv"
       android:layout_width="25dp"
       android:layout_height="25dp"
      android:src="@drawable/nugu_btn_down"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="15dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="60dp"/>

   <ImageView
      android:id="@+id/song_more_iv"
       android:layout_width="30dp"
       android:layout_height="30dp"
      android:src="@drawable/btn_player_more"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="12dp"
      app:layout_constraintTop_toBottomOf="@id/song_downarrow_iv"
      android:layout_marginTop="15dp"/>


   <TextView
       android:id="@+id/song_title_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="LILAC(라일락)"
       android:textColor="@color/black"
       android:textStyle="bold"
       android:textSize="25dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="130dp"/>

   <TextView
       android:id="@+id/song_singer_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="아이유(IU)"
       android:textColor="@color/black"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/song_title_tv"/>

   <ImageView
       android:id="@+id/song_arrow_iv"
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:src="@drawable/btn_arrow_more"
      app:layout_constraintStart_toEndOf="@id/song_singer_tv"
      app:layout_constraintTop_toBottomOf="@id/song_title_tv"/>

   <ImageView
      android:id="@+id/song_album_iv"
       android:layout_width="250dp"
       android:layout_height="250dp"
      android:src="@drawable/img_album_exp2"
      app:layout_constraintTop_toBottomOf="@id/song_singer_tv"
      android:layout_marginTop="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

   <TextView
      android:id="@+id/song_lyrics_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="오 라일락 꽃이 지는 날 good bye \n 이런 결말이 어울려 안녕 꽃잎 같"
       android:textSize="18dp"
       app:layout_constraintTop_toBottomOf="@id/song_album_iv"
       android:layout_marginTop="20dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>

   <ImageView
      android:id="@+id/song_my_like_off_iv"
       android:layout_width="30dp"
       android:layout_height="30dp"
      android:src="@drawable/ic_my_like_off"
      app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
      android:layout_marginTop="15dp"
      app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="120dp"
      app:layout_constraintEnd_toStartOf="@id/song_player_unlike_off"/>

   <ImageView
      android:id="@+id/song_player_unlike_off"
       android:layout_width="30dp"
       android:layout_height="30dp"
      android:src="@drawable/btn_player_unlike_off"
       app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
       android:layout_marginTop="15dp"
       app:layout_constraintStart_toEndOf="@id/song_my_like_off_iv"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginEnd="120dp"/>


   <ImageView
      android:id="@+id/song_btn_play_iv"
       android:layout_width="50dp"
       android:layout_height="50dp"
      android:src="@drawable/nugu_btn_play_32"
       app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
       android:layout_marginTop="40dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:visibility="visible"/>

   <ImageView
       android:id="@+id/song_btn_pause_iv"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@drawable/btn_miniplay_pause"
       app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
       android:layout_marginTop="40dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:visibility="invisible"/>

   <ImageView
      android:id="@+id/song_btn_skip_pre_iv"
       android:layout_width="40dp"
       android:layout_height="40dp"
      android:src="@drawable/nugu_btn_skip_previous_32"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/song_btn_play_iv"
      android:layout_marginStart="60dp"
      app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
      android:layout_marginTop="40dp"
      app:layout_constraintBottom_toBottomOf="parent"/>

   <ImageView
       android:id="@+id/song_btn_skip_next_iv"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@drawable/nugu_btn_skip_next_32"
       app:layout_constraintStart_toEndOf="@id/song_btn_play_iv"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginEnd="60dp"
       app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
       android:layout_marginTop="40dp"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <ImageView
    android:id="@+id/song_btn_repeat_iv"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:src="@drawable/nugu_btn_repeat_inactive"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/song_btn_skip_pre_iv"
    app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
    android:layout_marginTop="40dp"
    app:layout_constraintBottom_toBottomOf="parent"/>

   <ImageView
       android:id="@+id/song_btn_random_iv"
       android:layout_width="55dp"
       android:layout_height="55dp"
       android:src="@drawable/nugu_btn_random_inactive"
       app:layout_constraintStart_toEndOf="@id/song_btn_skip_next_iv"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
       android:layout_marginTop="40dp"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <ImageView
      android:id="@+id/song_btn_instagram_iv"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@drawable/btn_actionbar_instagram"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="15dp"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="15dp"/>

   <ImageView
      android:id="@+id/song_btn_related_iv"
       android:layout_width="60dp"
       android:layout_height="60dp"
      android:src="@drawable/btn_player_related"
      app:layout_constraintStart_toEndOf="@id/song_btn_instagram_iv"
       app:layout_constraintEnd_toStartOf="@id/song_go_list_iv"
       android:layout_marginEnd="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="5dp"/>

   <ImageView
      android:id="@+id/song_go_list_iv"
       android:layout_width="35dp"
       android:layout_height="35dp"
      android:src="@drawable/btn_player_go_list"
      app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginEnd="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="15dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>