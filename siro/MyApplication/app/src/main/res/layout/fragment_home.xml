<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_first_album_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_mike"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv" />

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_title_tv" />

        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:text="총 36곡 2020.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/img_album_exp"
            app:layout_goneMarginStart="20dp"
            app:layout_goneMarginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"/>

        <TextView
            android:id="@+id/home_sub_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악 >"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_sub_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textSize="15sp"
            android:textColor="@color/purple_700"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toStartOf="@id/home_sub_domestic_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"/>

        <TextView
            android:id="@+id/home_sub_domestic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toStartOf="@id/home_sub_foreign_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"/>

        <TextView
            android:id="@+id/home_sub_foreign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/horscroll1_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_sub_title_tv"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_sub_album1_iv"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/img_album_exp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/home_sub_album1_music_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Butter"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/home_sub_album1_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTS"
                    android:textSize="10sp"
                    android:layout_marginStart="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_sub_album2_iv"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/img_album_exp2"/>

                <TextView
                    android:id="@+id/home_sub_album2_music_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="라일락"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/home_sub_album2_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IU"
                    android:textSize="10sp"
                    android:layout_marginStart="18sp"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_sub_album3_iv"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_album_exp3" />

                    <TextView
                        android:id="@+id/home_sub_album3_music_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="5dp"
                        android:text="Next Level"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/home_sub_album3_singer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18sp"
                        android:text="aespa"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_sub_album4_iv"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/img_album_exp4"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/home_sub_album4_music_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="what is this"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/home_sub_album4_singer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pink"
                        android:textSize="10sp"
                        android:layout_marginStart="18sp"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horscroll1_sv"/>

        <TextView
            android:id="@+id/home_sub_audio_top10_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 인기 오디오 TOP10"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/home_sub_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 FLO에서 많이 듣는 오디오 프로그램"
            android:layout_marginStart="18dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/home_sub_audio_top10_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/horscroll12_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_sub_message_tv"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_potcast_exp"/>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@color/purple_500"
                    android:layout_marginStart="18dp"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김시선의 귀책사유"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flo x 윌라"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>




            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/home_sub_genre_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장르 콜렉션"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/horscroll12_sv"
            app:layout_constraintStart_toStartOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/horscroll3_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_sub_genre_tv"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_jenre_exp_1" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_jenre_exp_2" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_jenre_exp_3" />
            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/home_sub_collection_video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비디오 콜렉션"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@id/horscroll3_sv"
            app:layout_constraintStart_toStartOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/horscroll4_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_sub_collection_video_tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_video_exp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:text="무슨 영상이지"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_video_exp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:text="무슨 영상이지"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>



            </LinearLayout>

        </LinearLayout>

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/home_sub_banner_aos_iv"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/discovery_banner_aos"
            app:layout_constraintTop_toBottomOf="@id/horscroll4_sv"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="15dp"/>

        <LinearLayout
            android:id="@+id/home_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_sub_banner_aos_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/home_sub_facebook_logo_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_main_facebook"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_sub_instagram_logo_iv"
                app:layout_constraintTop_toBottomOf="@id/home_sub_banner_aos_iv"/>

            <ImageView
                android:id="@+id/home_sub_instagram_logo_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_main_instagram"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_sub_banner_aos_iv"
                app:layout_constraintStart_toEndOf="@id/home_sub_facebook_logo_iv"
                app:layout_constraintEnd_toStartOf="@id/home_sub_youtube_logo_iv"/>

            <ImageView
                android:id="@+id/home_sub_youtube_logo_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_main_youtube"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_sub_banner_aos_iv"
                app:layout_constraintStart_toEndOf="@id/home_sub_instagram_logo_iv"
                app:layout_constraintEnd_toEndOf="@id/home_sub_twitter_logo_iv"/>

            <ImageView
                android:id="@+id/home_sub_twitter_logo_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_main_twitter"
                app:layout_constraintTop_toBottomOf="@id/home_sub_banner_aos_iv"
                app:layout_constraintStart_toEndOf="@id/home_sub_youtube_logo_iv"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/home_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(주)드림어스 컴퍼니 사업자 정보 >"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_logo_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DREAMUS CO..LTD."
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/home_company_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>